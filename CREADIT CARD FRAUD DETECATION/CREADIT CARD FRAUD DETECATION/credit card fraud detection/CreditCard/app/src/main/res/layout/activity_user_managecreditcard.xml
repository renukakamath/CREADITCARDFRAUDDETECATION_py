<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".user_managecreditcard">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="Manage Credit card"

        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint="enter card`"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#121010"
        android:textColorHint="#878787" />


    <EditText
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint=" enter month"
        android:inputType="date"
        android:padding="8dp"
        android:textColor="#121010"
        android:textColorHint="#878787" />
    <EditText
        android:id="@+id/cvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint="enter cvv"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#121010"
        android:textColorHint="#878787" />


    <EditText
        android:id="@+id/pin_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint=" enter pin no"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#121010"
        android:textColorHint="#878787" />
    <EditText
        android:id="@+id/ifsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint="enter ifsc"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#121010"
        android:textColorHint="#878787" />


    <EditText
        android:id="@+id/bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint=" enter bank Number"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#121010"
        android:textColorHint="#878787" />

    <Button
        android:id="@+id/actbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#131313"
        android:text="Add"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/addcamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="View Credit card"

        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold|italic" />


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp" />

</LinearLayout>